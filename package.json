{
  "name": "blockchain",
  "version": "1.0.0",
  "description": "Blockchain base",
  "main": "index.js",
  "scripts": {
    "start": "npx ts-node-dev --respawn --transpile-only src/infra/CLI/index.ts",
    "test": "npx jest --passWithNoTests",
    "test:coverage": "yarn test --coverage",
    "test:watch": "yarn test --watch",
    "lint": "npx eslint",
    "lint:fix": "yarn lint --fix",
    "github:pr": "npx gh pr create --base develop --fill --title 'My title' --body '$(cat .github/PULL_REQUEST_TEMPLATE.md)'",
    "husky:prepare": "npx husky install",
    "husky:pre-commit": "yarn pipeline:commit",
    "husky:commit-msg": "npx --no -- commitlint --edit ${1}",
    "dependencies:cache:clear": "npm cache verify && yarn cache clean",
    "dependencies:audit": "npm audit && npx ncu",
    "dependencies:fix": "npm audit fix",
    "dependencies:upgrade": "npx ncu -u",
    "dependencies:upgrade:interactive": "npx ncu --interactive",
    "dependencies:upgrade:install": "npm i",
    "pipeline:commit": "yarn && yarn lint && yarn test",
    "pipeline:test": "yarn pipeline:commit && yarn start"
  },
  "keywords": [
    "blockchain",
    "typescript",
    "nodejs"
  ],
  "author": "Leonardo D'Alessandro",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@faker-js/faker": "^8.3.1",
    "@swc/cli": "^0.1.64",
    "@swc/core": "^1.3.105",
    "@swc/jest": "^0.2.31",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/readline-sync": "^1.4.4",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "eslint": "^8.43.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.10",
    "readline-sync": "^1.4.10",
    "uuid": "^9.0.1",
    "winston": "^3.9.0",
    "yup": "^1.3.3"
  }
}
